.col-md-4
  %article.panel.panel-default.wish
    .panel-heading
      %h1.panel-title
        - unless wish.public?
          %span.glyphicon(aria-hidden="true" class="glyphicon-eye-close")
        = link_to wish.title, wish 

    .panel-body
      = link_to wish do
        = image_tag wish.picture.url(:thumb)

      - if wish.user == current_user
        %hr
        = render partial: 'toggle_owned_btn',
                 locals: { wish: wish,  css_class: 'owned btn' }
