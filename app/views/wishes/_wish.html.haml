%article
  %h1= link_to wish.title, wish  
  = #link_to t('forms.buttons.owned'), wish_path(wish, wish: {owned: !wish.owned}), method: :patch, remote: true, class: 'owned'
  
  = # link_to t('forms.buttons.owned'), toggle_owned_wish_path(wish), method: :patch, remote: true, class: 'owned'
  = link_to toggle_owned_wish_path(wish), method: :patch, remote: true, class: 'owned' do
    %span.glyphicon(aria-hidden="true" class="#{owned_wishes_page? ? 'glyphicon-star-empty' : 'glyphicon-star'}")    
    = t('forms.buttons.owned')

  %hr