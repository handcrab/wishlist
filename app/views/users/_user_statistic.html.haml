.row.wish-stats
  .avatar
    = image_tag avatar_url(current_user), alt: current_user.display_name
  .links
    = link_to "#{t('menu.all_wishes')}: #{user.wishes.count}", personal_wishes_path
    %br
    = link_to "#{t('menu.owned_wishes')}: #{user.wishes.owned.count}", owned_wishes_path
    %br
    = link_to t('menu.public_page'), user_public_path(current_user)

%p 
  = User.human_attribute_name :created_at
  \ 
  = formatted_date user.created_at

